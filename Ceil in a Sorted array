class Solution:
    def findCeil(self, arr, x):
        l ,r = 0 , len(arr) - 1
        ceil = -1
        
        while (l<=r):
            mid = (l+r)//2
            
            if arr[mid] == x:
                ceil = mid
                r = mid - 1
                
            elif arr[mid] < x:
                l = mid + 1
            
            else:
                r = mid - 1
                ceil = mid
        return ceil
