        l  = 0
        longest = 0

        for i in range(len(nums)):
            if nums[i] == 0:
                k -= 1
                
                while k < 0:
                    
                    if nums[l] == 0:
                        k += 1
                    l += 1
                    
            longest = max(longest,i-l+1)
            
        return longest
